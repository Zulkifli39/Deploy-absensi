{
  "compilerOptions": {
    /* --- Base Environment --- */
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    
    /* --- JavaScript Support --- */
    "allowJs": true,
    "checkJs": true,
    "maxNodeModuleJsDepth": 0,                   /* Don't check JS inside node_modules at all */

    /* --- Emit --- */
    "noEmit": true,

    /* --- Type Checking Rules --- */
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    
    /* --- Interop --- */
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "coverage", "**/*.test.js", "**/*.spec.js"]
}